{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "planner",
  "plugin": [
    "opencode-openai-codex-auth",
    "@tarquinen/opencode-dcp@latest"
  ],
  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "sediment": {
      "type": "local",
      "command": [
        "sediment"
      ],
      "enabled": true
    },
    "dbt": {
      "type": "local",
      "command": [
        "uvx",
        "dbt-mcp"
      ],
      "enabled": true
    }
  },
  "permission": {
    "websearch": "ask",
    "webfetch": "ask",
    "context7_*": "ask",
    "grep_app_*": "ask"
  },
  "agent": {
    "explore": {
      "disable": true
    },
    "general": {
      "disable": true
    },
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    }
  }
}
