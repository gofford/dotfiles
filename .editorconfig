root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[{*.yml,*.yaml}]
indent_size = 2

# Terraform files
[{*.tf,*.tfvars,*.hcl}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefiles
[{Makefile,*.mk}]
indent_style = tab
