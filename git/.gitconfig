[core]
    autocrlf = false
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes
    eol = lf
    editor = vi
    pager = delta

[user]
    name = Jason Gofford
    email = jason@yotoplay.com
    signingkey = ~/.ssh/id_ed25519.pub

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true
    followTags = true

[branch]
    autoSetupMerge = always

[help]
    autocorrect = 20

[merge]
    log = true
    conflictstyle = zdiff3

[diff]
    renames = copies
    mnemonicprefix = true
    algorithm = patience
    colorMoved = dimmed-zebra
    colorMovedWS = ignore-all-space

[fetch]
    prune = true
    parallel = 0

[advice]
    commitBeforeMerge = true
    detachedHead = true
    implicitIdentity = true
    pushNonFastForward = false
    resolveConflict = true
    statusHints = false

[alias]
    gone = "!f() { git fetch --all --prune; git branch --format '%(refname:short) %(upstream:track)' | awk '/\\[gone\\]/{print $1}' | xargs git branch -D; }; f"
    cleanup = "!git branch --merged | grep -Ev '^\\*|main' | xargs -n1 git branch -d"
    unstage = reset HEAD --
    amend = commit --amend --no-edit
    undo = reset --soft HEAD~1

[credential]
    helper = osxkeychain

[tag]
    verbose = true

[commit]
    verbose = true
    gpgsign = true

[gpg]
    format = ssh

[submodule]
    fetchJobs = 0

[remote]
    pushDefault = origin

[delta]
    navigate = true
    line-numbers = true
    dark = true

[interactive]
    diffFilter = delta --color-only

[rerere]
    enabled = true

[maintenance]
    auto = false

[rebase]
    autoStash = true
    autoSquash = true
    updateRefs = true

[log]
    abbrevCommit = true
    follow = true

