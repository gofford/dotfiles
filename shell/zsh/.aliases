#!/bin/zsh

# modern file listing with eza
alias ll='eza -l --git'
alias la='eza -la --git'
alias ldot='eza -ld .*'
alias ls='eza'
alias tree='eza --tree'

# better cat with bat
alias cat='bat'

# enhanced grep and find
alias grep='rg'
alias find='fd'

# git - plain diff for piping to LLMs (bypasses delta pager)
alias gdiff='git --no-pager diff'
alias gdiffs='git --no-pager diff --staged'
alias gs='git-spice'

# misc
alias please=sudo
alias zshrc='${EDITOR:-vi} "${ZDOTDIR:-$HOME}"/.zshrc'
alias zbench='for i in {1..10}; do /usr/bin/time zsh -lic exit; done'
alias zdot='cd ${ZDOTDIR:-~}'
